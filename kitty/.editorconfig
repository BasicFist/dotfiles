# EditorConfig for Kitty Terminal Configuration
# https://editorconfig.org

root = true

# All files - basic settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kitty configuration files
[*.conf]
indent_style = space
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve markdown trailing spaces for line breaks
max_line_length = 120

# YAML (if any)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefiles (if any)
[Makefile]
indent_style = tab
